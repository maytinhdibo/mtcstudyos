function oppop(id){
document.getElementById(id).style.display='block';
document.getElementById('moretool').style.height='0';
}
function loi(loibh){
document.getElementById('loi').innerHTML=loibh;
}
function timeconv(time){
return Math.floor(time/60)+':'+Math.round((time-Math.floor(time/60)*60));
}
track=document.getElementById('audio');
setval();
function setval(){
if(track.currentTime>=track.duration){
if(localStorage.lap=='one'){
 onpause();
 }
if((localStorage.lap=='none')){ 
 next();
clearTimeout(loadtime);
 onplay();
 track.pause();
 }
 if(localStorage.lap=='all'){
 next();
 }
}
time=track.currentTime;
eval("switch(true){"+sessionStorage.getItem('loi'+bai)+"break;default:loi('')}");
document.getElementById('timeon').innerHTML=timeconv(track.currentTime);
document.getElementById('rangetime').value=(track.currentTime/track.duration)*100;
loadtime=setTimeout("setval()",1000);
}
function tua(){
track.currentTime=track.duration*(document.getElementById('rangetime').value/100);
if(track.currentTime<=track.duration){
 loadtime=setTimeout("setval()",1000);
}
}
function play(){
if(track.paused==true){
track.play();
onpause();
}else{
track.pause();
onplay();
}
}

function onplay(){
document.getElementById('playbtn').src="img/play.png";
document.getElementById('cd').style.animationName = "none";
}
function onpause(){
document.getElementById('playbtn').src="img/pause.png";
document.getElementById('cd').style.animationName ="spin";
if(localStorage.sub=='block'){
if(sessionStorage.sub!='none'){
top.document.getElementById('musicsub').style.display="block";
}else{
top.document.getElementById('musicsub').style.display="none";
}
}
}
function optool(){
if(document.getElementById('moretool').clientHeight<1){
document.getElementById('moretool').style.height=document.getElementById('moretool').scrollHeight+"px";
}else{
document.getElementById('moretool').style.height='0';
}
}
setTimeout(function(){
document.getElementById('moretool').style.bottom=document.getElementById('botbar').clientHeight+'px';
document.getElementById('timeend').innerText=timeconv(track.duration);
},200);
function opbai(){
track.src=sessionStorage.getItem('link'+bai);
onpause();
setTimeout(function(){
document.getElementById('timeend').innerText=timeconv(track.duration);
},200);
track.play();
document.getElementById('playbtn').src="img/pause.png";
document.getElementById('name').innerHTML=sessionStorage.getItem('name'+bai);
}
function next(){
if(bai<max){
bai++;
opbai();
}else{
bai=1;
opbai();
}
}

function lui(){
if(bai>1){
bai--;
opbai();
}else{
if(localStorage.lap=='all'){
bai=max;
opbai();
}
}
}
document.getElementById('name').innerHTML=sessionStorage.getItem('name'+bai);
track.src=sessionStorage.getItem('link'+bai);
</script>
